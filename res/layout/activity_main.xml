<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activeandroidtutorial.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/txtNomeCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Nome do curso:" />

    <Button
        android:id="@+id/btnListarTodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSalvar"
        android:layout_centerHorizontal="true"
        android:text="Listar todos" />

    <Button
        android:id="@+id/btnListarPorProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnListarTodos"
        android:layout_centerHorizontal="true"
        android:text="Listar por professor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnListarTodos"
        android:layout_below="@+id/edtNomeCurso"
        android:layout_marginTop="21dp"
        android:text="Nome do professor:" />

    <EditText
        android:id="@+id/edtNomeProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtNomeCurso"
        android:layout_below="@+id/textView2"
        android:ems="10" />

    <EditText
        android:id="@+id/edtNomeCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNomeCurso"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNomeProfessor"
        android:layout_centerHorizontal="true"
        android:text="Salvar" />

    <Button
        android:id="@+id/btnAttProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDeletar"
        android:layout_centerHorizontal="true"
        android:text="Atualizar professor do curso" />

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnListarTodos"
        android:layout_below="@+id/btnListarPorProfessor"
        android:layout_marginTop="46dp"
        android:text="Deletar Curso" />

    <Button
        android:id="@+id/btnDeletarTudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtNomeCurso"
        android:layout_below="@+id/btnListarPorProfessor"
        android:text="Deletar tudo" />

</RelativeLayout>
